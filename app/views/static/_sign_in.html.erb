<%= form_tag "/login" do %>

  <%= label_tag "user[email]", "Email"  %><br>
  <%= text_field_tag "user[email]" %><br>

  <%= label_tag "user[password]", "Password" %><br>
  <%= password_field_tag "user[password]" %><br></br>

  <%= button_tag "Login", class: "btn waves-effect waves-light cyan lighten-1"%>
<% end %>
