<div class="user">
  <h1><%= @user.name.capitalize %></h1>
  <% if @user.profile? %>
  <%= image_tag @user.profile.url, size:"250"%>
  <% end %>
  <h4>🎂<%= @user.birthday.strftime("%b %-m, %Y")%>🎂</h4>
  <p>About <%=@user.name.capitalize %>: <%= @user.bio %></p>
  <% if @user.id != session[:user_id] %>
  <p><%= form_for @friendship, url: friendships_path do |f| %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit @friend_status %>
    <% end %>
  <% end %></p>
</div>
  <div class="friends-list">
    <h4>Friends</h4>
    <p><%= @user.friends.count%></p>
  </div>
  <div class="events-list">
    <h4>Upcoming Events</h4>
    <p>your upcoming events should go here</p>
  </div>
