<h1>Select A Location:</h1>

<%= form_tag locations_path %>
<% @array.each do |location| %>
  <div>
    <%= hidden_field_tag "location[name]", "#{location.name}" %>
    <h4><%= location.name %></h4>
    <p>ADDRESS HERE</p>
    <p><%= location.phone %></p>
    <%= submit_tag "Select"%>
  </div>
<% end %>
